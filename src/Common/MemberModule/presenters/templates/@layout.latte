<!DOCTYPE html>
<html lang="cs">
<head>
    {control metaTags}
    {control metaTitle}

    {block styles}
        <link rel="stylesheet" href="{$basePath}/assets/css/temp/listings-bootstrap.css?v={$assetsVersion}">
        <link rel="stylesheet" href="{$basePath}/assets/css/temp/listings.css?v={$assetsVersion}">
        {*<link rel="stylesheet" href="{$basePath}/assets/css/listings.min.css?v={$assetsVersion}">*}
    {/block}
</head>
<body>


<input type="radio" name="sidebar-nav" id="sidebar-expand">
<label for="sidebar-expand" id="sidebar-expand-button">MENU</label>
<div id="sidebar">
    <label for="sidebar-collapse" id="sidebar-inner-collapse-button"><i class="fa fa-fw fa-times"></i></label>

    <div id="sidebar-user">
        <div class="sidebar-user-ico">
            <img src="{$imagesPath}/user.svg" alt="icon-user">
        </div>
        <div class="sidebar-user-detail">
            {$_userEntity->getFullName()}
        </div>
    </div>

    <nav id="main-nav">
        <ul>
            <li class="nav-header">Navigace</li>
            <li><a href="{plink :Listings:Member:Listing:new}" n:class="$presenter->isLinkCurrent(':Listings:Member:Listing:new') ? active"><img src="{$imagesPath}/add-file.svg" alt="icon-add-file"> Vytvořit výčetku</a></li>
            <li><input type="checkbox" id="listing-years" {if $presenter->isLinkCurrent(':Listings:Member:Dashboard:default')}checked{/if}>
                <label for="listing-years"><img src="{$imagesPath}/th.svg" alt="icon-th"> Přehled výčetek</label>
                <ul>
                    {foreach $_years as $_year}
                        <li><a href="{plink :Listings:Member:Dashboard:default year => $_year}" n:class="($_year == $_chosenYear) ? active">{$_year}</a></li>
                    {/foreach}
                </ul>
            </li>
            <li><a href="{plink :Listings:Member:EmployersOverview:default}" n:class="$presenter->isLinkCurrent(':Listings:Member:EmployersOverview:default') ? active"><img src="{$imagesPath}/money.svg" alt="icon-employer"> Správa zaměstnavatelů</a></li>
            <li><a href="{plink :Listings:Public:ListingPdf:default}"><i class="fa fa-fw fa-file-pdf-o"></i> PDF prázdných výčetek</a></li>
        </ul>

        <ul class="logout">
            <li><a href="{plink :Accounts:Public:Auth:logOut}"><i class="fa fa-fw fa-sign-out"></i> Odhlásit</a></li>
        </ul>
    </nav>
</div>

<div id="content-wrapper">
    <div class="container-fluid">
        <div class="row content-header">
            <div class="col-12">
                {control pageTitle}
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                {control flashMessages}
            </div>
        </div>
        <div class="row">
            <div class="col-12 content">
                {include #content}
            </div>
        </div>
    </div>
</div>

<input type="radio" name="sidebar-nav" id="sidebar-collapse">


{block scripts}
    <script type="text/javascript" src="{$basePath}/assets/js/js.min.js?v={$assetsVersion}"></script>
{/block}
</body>
</html>