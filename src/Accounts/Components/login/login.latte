    <div class="card-block">
        {snippet flashMessages}
            {control flashMessages}
        {/snippet}

        {form loginForm}
            <div class="form-group">
                {label email /}
                <div class="input-group">
                    <span class="input-group-addon" title="E-mailová adresa">
