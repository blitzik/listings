                    {input email class => 'form-control', placeholder => 'zadejte Váš E-mail'}
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-3">{label password /}</div>
                    <div class="col-9 text-right">
                        <a href="{plink :Accounts:Public:ForgottenPassword:request}">Potřebujete obnovit heslo?</a>
                    </div>
                </div>
                <div class="input-group">
                    <span class="input-group-addon" title="Heslo">
