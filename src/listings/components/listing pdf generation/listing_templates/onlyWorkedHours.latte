<!doctype html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>výčetka</title>

    <style>
        body {
            font-family: Verdana, Arial, sans-serif;
            font-size: 12px;
            color: #333;
        }

        .listing-meta-table {
            width: 100%;
            border: 0;
            border-collapse: collapse;
        }

        .listing-meta-table th {
            font-size: 10px;
            text-align: left;
        }

        .listing-meta-table td {
            font-size: 10px;
            width: 33.33333%;
            border: 1px solid #000;
            padding: 5px 10px;
        }

        .listing-table{
            border: 1px solid #000;
            border-collapse: collapse;
            width: 100%;
            margin-top: 10px;
        }

        .listing-table th,
        .listing-table td {
            border: 1px solid #000;
            padding: 7px;
            text-align: center;
        }

        .listing-table th {
            font-size: 10px;
        }

        .summary th,
        .summary td {
            font-size: 10px;
            padding-top: 3px;
            padding-bottom: 3px;
        }

        .bold-text {
            font-weight: bold;
        }

        .week-day {
            background-color: #e5e5e5;
        }

        .padding-top {
            padding-top: 8px;
        }

        .w7p { width: 7%; }
        .w10p { width: 10%; }
        .w15p { width: 15%; }
    </style>
</head>
<body>


<table class="listing-meta-table">
    <tr>
        <td rowspan="4" style="border: 0; font-size: 25px; font-weight: bold; padding: 0;">{$listing->getMonth()|monthByNumber} {$listing->getYear()}</td>
        <th>Zaměstnavatel:</th>
        <th>Jméno:</th>
    </tr>
    <tr>
        <td>{if $employer !== null}{$employer->getName()}{/if}</td>
        <td>{$employeeFullName}</td>
    </tr>

    <tr>
        <th class="padding-top">Základní mzda:</th>
        <th class="padding-top">Odpracované hodiny:</th>
    </tr>
    <tr>
        <td>{if $displayHourlyRate === true and $listing->getHourlyRate() !== null}{$listing->getHourlyRate()} Kč/h{/if}</td>
        <td align="right"><b>{$totalWorkedHoursInSeconds|invoiceTimeWithComma}</b></td>
    </tr>
</table>


<table class="listing-table">
    <thead>
    <tr>
        <th class="w7p">Datum</th>
        <th class="w7p">Den</th>
        <th>Popis práce - místo</th>
        <th class="w15p">Prac. doba</th>
        <th class="w10p">Oběd</th>
        <th class="w10p">Odpr. hod.</th>
        <th class="w10p">Ost. hod.</th>
    </tr>
    </thead>

    <tbody>
    {for $day = 1; $day <= $daysInMonth; $day++}
        {control listingItem-$day}
    {/for}
    </tbody>
</table>

</body>
</html>