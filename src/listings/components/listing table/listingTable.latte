

<table class="listing-table">
    <caption n:snippet="listingInfo">
        <a href="{plink :Listings:Member:Listing:edit id => $listing->getId()}">{if !$listing->hasSetEmployer()}Zaměstnavatel není nastaven{else}{$listing->getEmployerName()}{/if}</a>
        <span>Celkem {$totalWorkedDays|plural:["Odpracováno", "Odpracován", "Odpracovány", "Odpracováno"]} [ <b>{$totalWorkedDays} {$totalWorkedDays|plural:["dní", "den", "dny", "dní"]}</b> ] a [ <b>{$totalWorkedHours|invoiceTimeWithComma} {if $totalWorkedHoursInSeconds % 3600 != 0}hodiny{elseif $totalWorkedHoursInSeconds == 0 or $totalWorkedHoursInSeconds > 14400}hodin{elseif $totalWorkedHoursInSeconds == 3600}hodina{else}hodiny{/if}</b> ]</span>
    </caption>
    <thead>
        <tr>
            <th class="w75">Datum</th>
            <th class="w75">Den</th>
            <th class="w350">Popis práce - místo</th>
            <th class="w125">Prac. doba</th>
            <th class="w75">Oběd</th>
            <th class="w75">Odpr. hod.</th>
            <th colspan="2">Akce</th>
        </tr>
    </thead>

    <tbody>
        {for $day = 1; $day <= $daysInMonth; $day++}
            {control listingItem-$day}
        {/for}
    </tbody>

</table>